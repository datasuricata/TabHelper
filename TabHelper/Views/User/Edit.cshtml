@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Editar usuário</h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="well text-center">
                <strong>Atualizar informações do colaborador {Lucas Moraes} ?</strong>
            </div>
            <div class="well text-center">
            <fieldset>
                <div class="form-group">
                    <label class="col-lg-3 control-label" for="inputSmall">Nome</label>
                    <div class="col-lg-9">
                        <input class="form-control input-sm" type="text" id="inputSmall" placeholder="Nome Completo">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-3 control-label">E-mail</label>
                    <div class="col-lg-9">
                        <input type="text" class="form-control input-sm" id="inputEmail" placeholder="usuario@datasuricata.com.br">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-3 control-label">Senha</label>
                    <div class="col-lg-9">
                        <input type="password" class="form-control input-sm" id="inputPassword" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-3 control-label">Nova Senha</label>
                    <div class="col-lg-9">
                        <input type="password" class="form-control input-sm" id="inputPassword" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="select" class="col-lg-3 control-label">Relação</label>
                    <div class="col-lg-9">
                        <select class="form-control input-sm" id="select">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <br>
                    </div>
                    <label for="select" class="col-lg-3 control-label">Perfil</label>
                    <div class="col-lg-9">
                        <select class="form-control input-sm" id="select">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <br>
                    </div>
                </div>
            </fieldset>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-info btn-sm">Salvar alterações</button>
    </div>
</div>