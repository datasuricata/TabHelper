@model TabHelper.Models.ViewModel.UserModel

@using TabHelper.Helpers

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Editar usuário</h4>
    </div>
    <div class="modal-body">
        <form data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Index'" asp-controller="User" asp-action="Edit" class="form-horizontal">
            <div class="well text-center" style="border-color:#029acf">
                <strong>Inserir novo registro de usuário</strong>
            </div>
            <div class="well text-center" style="border-color:#029acf">
                <fieldset>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Nome</label>
                        <div class="col-lg-9">
                            <input class="form-control input-sm" type="text" asp-for="Name" placeholder="Nome Completo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">E-mail</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control input-sm" asp-for="Email" placeholder="usuario@datasuricata.com.br">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Senha</label>
                        <div class="col-lg-9">
                            <input type="password" class="form-control input-sm password" asp-for="Password" value="@Model.Password" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Acesso</label>
                        <div class="col-lg-9">
                            <select class="form-control input-sm" asp-for="UserAccess" asp-items="Utils.GetAccessDropdown()"></select>
                            <br>
                        </div>
                        <label for="select" class="col-lg-3 control-label">Departamento</label>
                        <div class="col-lg-9">
                            <select class="form-control input-sm" asp-for="DepartmentId" asp-items="ViewBag.Departments as List<SelectListItem>"></select>
                            <br>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="text-right">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-info btn-sm">Salvar alterações</button>
            </div>
        </form>
    </div>
    <div class="modal-footer">
    </div>
</div>
