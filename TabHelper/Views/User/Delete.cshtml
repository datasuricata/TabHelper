@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Deletar usuário</h4>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="well text-center">
                <strong>Deseja deletar o colaborador {Lucas Moraes} ?</strong>
            </div>
            <div class="well text-center">
            <fieldset>
                <div class="form-group">
                    <div class="form-group">
                        <div class="col-lg-8">
                            <label class="col-lg-2 control-label">Confirmar?</label>
                            <div class="col-lg-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                                        Confirmar
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" data-dismiss="modal" id="optionsRadios2" value="option2">
                                        Cancelar
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-info btn-sm">Salvar alterações</button>
    </div>
</div>