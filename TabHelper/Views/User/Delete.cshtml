@model TabHelper.Models.ViewModel.UserLightModel

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Deletar usuário</h4>
    </div>
    <div class="modal-body">
        <form data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Index'" asp-controller="User" asp-action="Delete" class="form-horizontal">
            <div class="well text-center" style="border-color:#029acf">
                <strong>Deseja deletar o colaborador <b>@Model.Name</b> ?</strong>
            </div>
            <div class="well text-center" style="border-color:#029acf">
                <fieldset>
                    <div class="form-group">
                        <div class="form-group">
                            <div class="col-lg-12 text-center">
                                <input type="hidden" asp-for="Id" />
                                Os acessos do colaborador na plataforma serão deletados da base dados, tem certeza de que deseja continuar?
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="text-right">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-info btn-sm">Confirmar</button>
            </div>
        </form>
    </div>
    <div class="modal-footer">
    </div>
</div>