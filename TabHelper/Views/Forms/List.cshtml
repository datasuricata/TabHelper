@model TabHelper.Models.ViewModel.FormViewModel

@{
    var state = string.Empty;
}

<div class="panel panel-info drop-shadow">
    <div class="panel-heading">Listagem de Formulários</div>
    <div class="panel-body">
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">Código</th>
                    <th class="text-center">Nome</th>
                    <th class="text-center">Ação</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Forms != null)
                {
                    foreach (var frm in Model.Forms)
                    {
                        <tr>
                            <td>@frm.Id</td>
                            <td>@frm.Code</td>
                            <td>@frm.Name</td>

                            <td>
                                <a href="#" class="btn btn-default btn-xs @state" data-toggle="modal" data-target="#detail">Detalhes</a>
                                <a href="#" class="btn btn-primary btn-xs @state" data-toggle="modal" data-target="#edit">Alterar</a>
                                <a href="#" class="btn btn-primary btn-xs @state" data-toggle="modal" data-target="#desactive">Desativar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="container-fluid">
            <div class="text-center">

                <nav>
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">6</a></li>
                        <li><a href="#">7</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


