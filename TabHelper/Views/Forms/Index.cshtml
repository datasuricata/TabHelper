@model TabHelper.Models.ViewModel.FormViewModel
@using TabHelper.Models.ViewModel

@{
    ViewData["Title"] = "Formulários";
}

<div class="col-md-12">
    <div class="panel panel-info drop-shadow">
        <div class="panel-heading">Formulários de Entrada</div>
        <div class="panel-body">
            <div class="col-md-8">
                <h3>Controle de Formulários</h3>
                <p>Use este configurador para criar novos formulários.</p>
                <p>Formulários são criados como auxiliares de marca para seus atendimentos.</p>
                <p>Para criar um formulário você precisa criar seus atributos de entrada para sincronizar com o seu modelo.</p>
                <p>Você deve vincular seus formulários com alguma tabulação.</p>
            </div>
            <div class="col-md-4 text-center" style="margin-top:40px;">
                @*<a asp-controller="Form" asp-action="CreateForm" class="btn btn-default btn-sm text-right drop-shadow" data-toggle="modal" style="width:100%;" data-target="#createform">Formulário (+)</a>*@
                <a class="btn btn-default btn-sm text-right drop-shadow" data-toggle="modal" style="width:100%;" data-target="#createform">Formulário (+)</a>
                <a href="#" class="btn btn-primary btn-sm text-right drop-shadow" data-toggle="modal" style="width:100%;margin-top:10px;" data-target="#create">Gerencie todos formulários</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @await Html.PartialAsync("../Forms/List.cshtml", Model)
        </div>
    </div>
</div>

@*<CREATE FORM>*@
<div class="modal" id="createform">
    <div class="modal-dialog">
        @await Html.PartialAsync("../Forms/CreateForm.cshtml", new FormManager())
    </div>
</div>

@*<EDIT FORM>*@
<div class="modal" id="editform">
    <div class="modal-dialog">
        @await Html.PartialAsync("../Forms/Edit.cshtml", new FormModel())
    </div>
</div>

@*<EDIT FORM ATTRIBUTE>*@
<div class="modal" id="editformatt">
    <div class="modal-dialog">
        @await Html.PartialAsync("../Forms/EditAttribute.cshtml", new FormAttModel())
    </div>
</div>

@*<DELETE FORM>*@
<div class="modal" id="delete">
    <div class="modal-dialog">
        @await Html.PartialAsync("../Forms/Delete.cshtml", new FormModel())
    </div>
</div>



